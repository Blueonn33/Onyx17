@model IEnumerable<Chapter>
@{
    ViewData["Title"] = "Раздели";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Chapter/ChapterStyles.css" />
</head>
<body>
    <h1 class="mt-5 mb-5 text-light">Раздели</h1>
    <div class="chaptersContainer">
        <a class="btn btn-lg btn-info" asp-action="Create" asp-controller="Chapter" 
            asp-route-languageId="@ViewBag.languageId">Създай</a>

        @foreach(var chapter in Model)
        {
            <div class="container">
                <p>@chapter.Name</p>
                <p>@chapter.Description</p>
            </div>

            @if (chapter.PdfFileData != null)
            {
                <div>
                    <iframe src="@Url.Action("GetPdf", "Chapter", new { chapterId = chapter.Id })"
                            width="100%" height="600px" style="border: 10px solid white;">
                    </iframe>
                </div>
            }
        }

    </div>
</body>