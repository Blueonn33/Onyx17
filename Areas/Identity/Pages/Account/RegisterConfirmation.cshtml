@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Потвърждаване на регистрация";
}

<h1 class="fs-1 text-light mt-5">Потвърждаване на регистрация</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    <a id="confirm-link" href="@Model.EmailConfirmationUrl">Натиснете за потвърждаване</a>
</p>
    }
    else
    {
<p>
        Моля, проверете имейла си за потвърждаване на регистрацията.
</p>
    }
}

