@page
@model LogoutModel
@{
    ViewData["Title"] = "Изход";
}

<header>
    <h1 class="fs-1 text-light mt-5 mb-5">Изход</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Натиснете тук за изход</button>
            </form>
        }
        else
        {
            <p>Успешно излязохте от профила.</p>
        }
    }
</header>
