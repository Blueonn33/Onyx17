@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}
<head>
    <style>
        .loginBtnContainer{
            display: flex;
            justify-content: center;
        }
        .loginSubmit {
            background-color: #002828;
            border: 5px solid #037E7E;
            padding: 5px 50px;
            font-size: 25px;
            color: white;
            border-radius: 10px;
        }
        .loginSubmit:hover {
            color: #002828;
            background-color: white;
        }
        input {
            height: 70px !important;
            font-size: 20px !important;
        }
        .footer {
            position: absolute; 
            bottom: 0; 
            width: 100%;
        }
    </style>
</head>
<body>
    <h1 class="text-light mt-5 fs-1">Вход</h1>
    <div class="row">
        <div class="col-12">
            <section>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Имейл</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="******" />
                        <label asp-for="Input.Password" class="form-label">Парола</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="loginBtnContainer mt-5">
                        <button id="loginSubmit" type="submit" class="loginSubmit">Вход</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
