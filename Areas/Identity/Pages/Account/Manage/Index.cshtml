@page
@model IndexModel
@{
    ViewData["Title"] = "Профил";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<head>
    <link href="~/css/Manage/Layout.css" rel="stylesheet" />
</head>

<h3 class="mb-5 text-light fs-2">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input type="hidden" asp-for="Input.ImageData" />
            <input type="hidden" asp-for="Input.ImageMimeType" />

            @if (Model.Input.ImageData != null && Model.Input.ImageMimeType != null)
            {
                <div class="mb-4 currentImageContainer">
                    <img src="data:@Model.Input.ImageMimeType;base64,@Convert.ToBase64String(Model.Input.ImageData)"
                         class="manageProfilePicture"
                    />
                </div>
            }
            <div class="form-floating mb-3">
                <input asp-for="Input.ProfileImage" type="file" class="form-control" aria-required="true" />
                <label asp-for="Input.ProfileImage">Профилна снимка</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label">Email</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control"/>
                <label asp-for="Input.Name" class="form-label">Име</label>
            </div>
            <div class="form-floating mb-3">
                <textarea asp-for ="Input.Description" class="form-control"></textarea>
                <label asp-for="Input.Description" class="form-label">Описание</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control"/>
                <label asp-for="Input.PhoneNumber" class="form-label">Телефон</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="update-profile-button-container">
                <button id="update-profile-button" type="submit" class="w-50 btn btn-lg btn-primary">Запази</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
